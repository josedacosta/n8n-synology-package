# n8n Configuration for Synology DSM
# Copy this file to .env and customize the values

# === NETWORK CONFIGURATION ===
# n8n listening port (default: 5678)
N8N_PORT=5678

# Hostname (your domain or NAS IP)
N8N_HOST=nas.example.com

# Protocol (http or https)
N8N_PROTOCOL=http

# Full URL for webhooks
WEBHOOK_URL=http://nas.example.com:5678/

# === TIMEZONE ===
TIMEZONE=Europe/Paris

# === DATABASE ===
# PostgreSQL password (change it immediately!)
POSTGRES_PASSWORD=YourSecurePassword123!

# === SECURITY ===
# 64-character encryption key (generate with: openssl rand -hex 32)
# ⚠️ IMPORTANT: NEVER change this key after first use!
N8N_ENCRYPTION_KEY=

# === BASIC AUTHENTICATION (optional) ===
# Enable basic authentication (true/false)
N8N_BASIC_AUTH_ACTIVE=false

# Username for basic authentication
N8N_BASIC_AUTH_USER=admin

# Password for basic authentication
N8N_BASIC_AUTH_PASSWORD=