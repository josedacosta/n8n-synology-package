{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "downlevelIteration": true,
    "allowJs": true,
    "types": ["node"]
  },
  "include": [
    "scripts/**/*.ts",
    "scripts/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "package"
  ]
}