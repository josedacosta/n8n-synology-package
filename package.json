{
  "name": "n8n-synology-package",
  "version": "1.0.0",
  "description": "n8n workflow automation tool package for Synology DSM 7+",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build.js",
    "package": "node scripts/package.js",
    "update-repo": "node scripts/update-repo.js",
    "release": "yarn build && yarn package && yarn update-repo",
    "clean": "rm -rf dist/*.spk",
    "check:versions": "tsx scripts/version/check-version-consistency.ts",
    "check:links": "tsx scripts/links/check-links.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "n8n",
    "synology",
    "dsm",
    "package",
    "workflow",
    "automation"
  ],
  "author": "josedacosta",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "archiver": "^6.0.0",
    "fs-extra": "^11.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}